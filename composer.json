{
  "name": "friendsofcake/app-template",
  "description": "An empty CakePHP 2.5 application",
  "type": "project",
  "keywords" : [],
  "homepage" : "http://cakephp.org",
  "license" : "MIT",
  "require" : {
    "php" : ">=5.4",
    "composer/installers" : "~1.0",
    "cakephp/cakephp" : "2.*",
    "friendsofcake/crud" : "3.*",
    "josegonzalez/dotenv": "1.*",
    "ad7six/dsn": "0.3.*"
  },
  "require-dev": {
    "cakephp/debug_kit" : "2.2.*"
  },
  "minimum-stability": "dev",
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "heroku": {
      "framework": "cakephp2",
      "document-root": "app/webroot",
      "index-document": "index.php",
      "compile": [
        "echo 'Copying DebugKit webroot directory' && cp -rfp $BUILD_DIR/Plugin/DebugKit/webroot $BUILD_DIR/app/webroot/debug_kit"
      ]
    }
  }
}
